<!-- Special version of Bootstrap that only affects content wrapped in .bootstrap-iso -->


<!-- HTML Form (wrapped in a .bootstrap-iso div) -->
<div class="bootstrap-iso">
 <div class="container-fluid">
  <div class="row">
   <div class="col-md-6 col-sm-6 col-xs-12">
    <form class="form-horizontal" method="post">
     <div class="form-group form-group-lg">
      <label class="control-label col-sm-2" for="name">
       Name
      </label>
      <div class="col-sm-10">
       <div class="input-group">
        <div class="input-group-addon">
         Your "friend"
        </div>
        <input class="form-control" id="name" name="name" type="text"/>
       </div>
      </div>
     </div>
     <div class="form-group form-group-lg">
      <label class="control-label col-sm-2 requiredField" for="rec_email">
       Email
       <span class="asteriskField">
        *
       </span>
      </label>
      <div class="col-sm-10">
       <div class="input-group">
        <div class="input-group-addon">
         <i class="fa fa-bars">
         </i>
        </div>
        <input class="form-control" id="rec_email" name="rec_email" type="text"/>
       </div>
      </div>
     </div>
     <div class="form-group form-group-lg">
      <label class="control-label col-sm-2" for="tel">
       Telephone #
      </label>
      <div class="col-sm-10">
       <div class="input-group">
        <div class="input-group-addon">
         <i class="fa fa-commenting-o">
         </i>
        </div>
        <input class="form-control" id="tel" name="tel" type="text"/>
       </div>
      </div>
     </div>
     <div class="form-group form-group-lg">
      <label class="control-label col-sm-2" for="rec_twitter">
       Twitter
      </label>
      <div class="col-sm-10">
       <div class="input-group">
        <div class="input-group-addon">
         <i class="fa fa-twitter">
         </i>
        </div>
        <input class="form-control" id="rec_twitter" name="rec_twitter" type="text"/>
       </div>
      </div>
     </div>
     <div class="form-group form-group-lg">
      <label class="control-label col-sm-2 requiredField" for="package">
       Package Choice
       <span class="asteriskField">
        *
       </span>
      </label>
      <div class="col-sm-10">
       <select class="select form-control" id="package" name="package">
        <option value="Trump">
         Trump
        </option>
        <option value="Cats">
         Cats
        </option>
        <option value="Yaks">
         Yaks
        </option>
       </select>
       <span class="help-block" id="hint_package">
        Please select
       </span>
      </div>
     </div>
     <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
       <button class="btn btn-default btn-lg btn-block" name="submit" type="submit">
        Submit
       </button>
      </div>
     </div>
    </form>
   </div>
  </div>
 </div>
</div>
